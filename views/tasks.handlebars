<div id="document">
<header>
    <div class="container-fluid" id="secondary-header">
        <div class="row">
            <div class="col-sm-12" id="tasks-header">
                <h1 id="title">Not Your Maid</h1>
            </div>
        </div>
    </div>
</header>

<div class="container" id="tasklist-container">
   <div class="row">
       <div class="col-sm-12">
           <h2 id="tasks-title">Your Chores</h2>
        </div>
    </div>
    <div class="task-append" id="task-append">
    </div>
    <div class="add-append">
    </div>

    <div class="row">
        <div class="col-sm">
            <button id="add-chore" onclick="showAddTask()">+ Add Chore</button>
        </div>
    </div>
    <div class="row" id="add-task-form">   
        <div class="col-sm">
            <p id="add-task">New Chore:</p>
                <input type="text" id="add-task">
            <p id="add-assign">Assign to:</p>
                <input type="text" id="add-assign">
            <p id="add-dueby">Due On:</p> 
                <input type="date" id="add-dueby-input"> 
        </div>
        <button type="button" id="createbutton">Submit</button>
    </div>               
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.js"></script>
<script src="/js/tasks.js"></script>